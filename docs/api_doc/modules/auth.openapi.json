{
  "openapi": "3.0.1",
  "info": {
    "title": "活动家平台 - 认证模块 API",
    "description": "用户认证、注册、登录等接口。支持普通用户、商家、超级管理员三种角色。",
    "version": "1.0.0",
    "contact": {
      "name": "活动家开发团队",
      "email": "dev@huodongjia.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "本地开发环境"
    },
    {
      "url": "https://api.huodongjia.com",
      "description": "生产环境"
    }
  ],
  "tags": [
    {
      "name": "用户认证",
      "description": "普通用户认证相关接口"
    },
    {
      "name": "商家认证",
      "description": "商家（活动组织者）认证相关接口"
    },
    {
      "name": "超管认证",
      "description": "超级管理员认证相关接口"
    },
    {
      "name": "通用认证",
      "description": "所有角色通用的认证接口"
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "普通用户登录",
        "description": "普通用户使用账号密码登录",
        "tags": ["用户认证"],
        "operationId": "userLogin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              },
              "examples": {
                "example1": {
                  "summary": "使用用户名登录",
                  "value": {
                    "identifier": "user1",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                },
                "examples": {
                  "success": {
                    "summary": "登录成功示例",
                    "value": {
                      "success": true,
                      "message": "登录成功",
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjcyNDA4ODNlLTJmN2EtNDhjYy04NDFhLTg3ZGFkNGE1YjMxMiIsInBob25lIjoiMTM4MDAxMzgwMDEiLCJ1c2VyX3R5cGUiOiJ1c2VyIiwiaWF0IjoxNzYxMDU5NDk4LCJleHAiOjE3NjE2NjQyOTh9.2yGWjWHtNsG9PdPwvop7xzALwwKmbCrhmue3ZWOqGlM",
                      "user": {
                        "id": "7240883e-2f7a-48cc-841a-87dad4a5b312",
                        "phone": "13800138001",
                        "name": "张三",
                        "user_type": "user",
                        "age": 28,
                        "occupation": "产品经理",
                        "company": "XX科技有限公司",
                        "tags": ["户外", "摄影", "旅行"],
                        "wechat_qr": "https://example.com/qr/user123.jpg"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "invalidCredentials": {
                    "summary": "账号或密码错误",
                    "value": {
                      "success": false,
                      "message": "账号或密码错误",
                      "code": "INVALID_CREDENTIALS"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
