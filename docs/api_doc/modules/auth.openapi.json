    "/api/auth/register": {
      "post": {
        "summary": "普通用户注册",
        "description": "创建新的普通用户账号",
        "tags": ["用户认证"],
        "operationId": "userRegister",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["account", "password"],
                "properties": {
                  "account": {
                    "type": "string",
                    "description": "用户账号",
                    "example": "user7"
                  },
                  "password": {
                    "type": "string",
                    "description": "密码（至少6位）",
                    "minLength": 6,
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                },
                "examples": {
                  "success": {
                    "summary": "用户注册成功示例",
                    "value": {
                      "success": true,
                      "message": "注册成功",
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6ImM3ZDVlNGYzLTZnN2gtNmM0ZC0wZTVmLTRnM2g2YzdkNWU0ZiIsInBob25lIjpudWxsLCJ1c2VyX3R5cGUiOiJ1c2VyIiwiaWF0IjoxNzYxMDU5NDk4LCJleHAiOjE3NjE2NjQyOTh9.5zJakZLwQvN2SgRnzCsO0bDOzNoEufyxohx6cZTrJpP",
                      "user": {
                        "id": "c7d5e4f3-6g7h-6c4d-0e5f-4g3h6c7d5e4f",
                        "phone": null,
                        "name": "user7",
                        "user_type": "user",
                        "age": null,
                        "occupation": null,
                        "company": null,
                        "tags": [],
                        "wechat_qr": null
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "注册失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "accountExists": {
                    "summary": "账号已存在",
                    "value": {
                      "success": false,
                      "message": "该账号已被注册",
                      "code": "ACCOUNT_EXISTS"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/organizer/register": {
      "post": {
        "summary": "商家注册",
        "description": "创建新的商家账号",
        "tags": ["商家认证"],
        "operationId": "organizerRegister",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["account", "password"],
                "properties": {
                  "account": {
                    "type": "string",
                    "description": "商家账号",
                    "example": "organizer_company1"
                  },
                  "password": {
                    "type": "string",
                    "description": "密码（至少6位）",
                    "minLength": 6,
                    "example": "123456"
                  },
                  "companyName": {
                    "type": "string",
                    "description": "公司名称（可选）",
                    "example": "XX科技有限公司"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "注册失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/me": {
      "get": {
        "summary": "获取当前用户信息",
        "description": "获取当前登录用户的详细信息",
        "tags": ["通用认证"],
        "operationId": "getCurrentUser",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "获取用户信息成功示例",
                    "value": {
                      "success": true,
                      "user": {
                        "id": "7240883e-2f7a-48cc-841a-87dad4a5b312",
                        "phone": "13800138001",
                        "name": "张三",
                        "user_type": "user",
                        "age": 28,
                        "occupation": "产品经理",
                        "company": "XX科技有限公司",
                        "tags": ["户外", "摄影", "旅行"],
                        "wechat_qr": "https://example.com/qr/user123.jpg"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "未登录或 Token 已过期",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/password": {
      "put": {
        "summary": "修改密码",
        "description": "修改当前用户的密码",
        "tags": ["通用认证"],
        "operationId": "changePassword",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["oldPassword", "newPassword"],
                "properties": {
                  "oldPassword": {
                    "type": "string",
                    "description": "旧密码",
                    "example": "123456"
                  },
                  "newPassword": {
                    "type": "string",
                    "description": "新密码（至少6位）",
                    "minLength": 6,
                    "example": "654321"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "修改成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "密码修改成功"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "修改密码成功示例",
                    "value": {
                      "success": true,
                      "message": "密码修改成功"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "旧密码错误或未登录",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "登出",
        "description": "退出登录，使当前 Token 失效",
        "tags": ["通用认证"],
        "operationId": "logout",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {},
                "description": "可选的空对象"
              },
              "example": {}
            }
          }
        },
        "responses": {
          "200": {
            "description": "登出成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "登出成功"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "登出成功示例",
                    "value": {
                      "success": true,
                      "message": "登出成功"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "未登录或 Token 已过期",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Token 认证"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": ["identifier", "password"],
        "properties": {
          "identifier": {
            "type": "string",
            "description": "用户账号（用户名或手机号）",
            "example": "user1"
          },
          "password": {
            "type": "string",
            "description": "密码",
            "example": "123456"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "登录成功"
          },
          "token": {
            "type": "string",
            "description": "JWT Token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjcyNDA4ODNlLTJmN2EtNDhjYy04NDFhLTg3ZGFkNGE1YjMxMiIsInBob25lIjoiMTM4MDAxMzgwMDEiLCJ1c2VyX3R5cGUiOiJ1c2VyIiwiaWF0IjoxNzYxMDU5NDk4LCJleHAiOjE3NjE2NjQyOTh9.2yGWjWHtNsG9PdPwvop7xzALwwKmbCrhmue3ZWOqGlM"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        },
        "required": ["success", "message", "token", "user"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "用户唯一ID",
            "example": "7240883e-2f7a-48cc-841a-87dad4a5b312"
          },
          "phone": {
            "type": "string",
            "description": "手机号",
            "example": "13800138001",
            "nullable": true
          },
          "name": {
            "type": "string",
            "description": "用户姓名",
            "example": "张三"
          },
          "user_type": {
            "type": "string",
            "description": "用户类型",
            "enum": ["user", "organizer", "admin"],
            "example": "user"
          },
          "age": {
            "type": "integer",
            "description": "年龄",
            "example": 28,
            "nullable": true
          },
          "occupation": {
            "type": "string",
            "description": "职业",
            "example": "产品经理",
            "nullable": true
          },
          "company": {
            "type": "string",
            "description": "公司",
            "example": "XX科技有限公司",
            "nullable": true
          },
          "tags": {
            "type": "array",
            "description": "用户标签",
            "items": {
              "type": "string"
            },
            "example": ["户外", "摄影", "旅行"]
          },
          "wechat_qr": {
            "type": "string",
            "description": "微信二维码URL",
            "example": "https://example.com/qr/user123.jpg",
            "nullable": true
          }
        },
        "required": ["id", "name", "user_type", "tags"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "description": "错误信息",
            "example": "账号或密码错误"
          },
          "code": {
            "type": "string",
            "description": "错误代码",
            "example": "INVALID_CREDENTIALS"
          }
        },
        "required": ["success", "message"]
      }
    }
  }
}
