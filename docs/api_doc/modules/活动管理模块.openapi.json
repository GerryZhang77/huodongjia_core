        "operationId": "getEventDetail",
        "tags": [
          "活动查询"
        ],
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "description": "活动ID",
            "required": true,
            "example": "",
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "7ea8f4b1-8b70-4356-a39a-e43e81ed597b"
            }
          },
          {
            "name": "apifoxToken",
            "in": "header",
            "description": "",
            "example": "{{apifoxToken}}",
            "schema": {
              "type": "string",
              "default": "{{apifoxToken}}"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "event": {
                      "$ref": "#/components/schemas/EventDetail"
                    }
                  }
                }
              }
            },
            "headers": {}
