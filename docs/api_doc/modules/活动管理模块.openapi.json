        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {}
              },
              "example": {
                "filePath": "D:\\huodongjia\\uploads\\file-1761383941080-391176227.xlsx",
                "map_info": {
                  "user": "name",
                  "专业": "occupation",
