{
  "openapi": "3.0.1",
  "info": {
    "title": "活动管理模块",
    "description": "活动的创建、编辑、查询、报名管理等接口",
    "version": "1.0.0",
    "contact": {
      "name": "活动家开发团队",
      "email": "dev@huodongjia.com"
    }
  },
  "tags": [
    {
      "name": "活动查询"
    },
    {
      "name": "活动管理"
    },
    {
      "name": "报名管理"
    },
    {
      "name": "数据提取"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "获取所有活动",
        "deprecated": false,
        "description": "获取活动列表，支持按状态筛选",
        "operationId": "getAllEvents",
        "tags": [
          "活动查询"
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "活动状态筛选",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "draft",
                "published",
                "ongoing",
                "completed",
                "cancelled"
              ],
              "example": "draft"
            }
          },
          {
            "name": "apifoxToken",
            "in": "header",
            "description": "",
            "example": "{{apifoxToken}}",
            "schema": {
              "type": "string",
              "default": "{{apifoxToken}}"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "events": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Event"
                      }
                    }
                  }
                }
              }
            },
            "headers": {}
          }
        },
        "security": [
          {
            "bearerAuth1": []
          }
        ]
      }
    },
    "/{eventId}": {
      "get": {
        "summary": "获取特定活动信息（包括当前报名人数情况）",
        "deprecated": false,
