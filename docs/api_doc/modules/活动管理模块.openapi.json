              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "importedCount": {
                      "type": "integer"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "event_id": {
                            "type": "string"
                          },
                          "other_info": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "student_id": {
                            "type": "integer"
                          },
                          "occupation": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "event_id",
                          "other_info",
                          "name",
                          "student_id",
                          "occupation"
                        ]
                      }
                    }
                  },
                  "required": [
                    "success",
                    "message",
                    "importedCount",
                    "data"
                  ]
                }
              }
            },
            "headers": {}
          }
        },
        "security": []
      }
    },
