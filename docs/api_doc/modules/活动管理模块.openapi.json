              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            },
            "headers": {}
          }
        },
        "security": [
          {
            "bearerAuth1": []
          }
        ]
      },
      "put": {
        "summary": "编辑活动",
        "deprecated": false,
        "description": "商家编辑自己的活动信息",
        "operationId": "updateEvent",
        "tags": [
          "活动管理"
